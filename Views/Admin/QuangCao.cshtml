@model IEnumerable<WebApplication1.Models.QuangCao>

@{
    ViewBag.Title = "QuangCao";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <h2>Quảng Cáo</h2>
    <h6>Chú thích: Vị trí: 1: banner top</h6>
    <h6>2: khung sponsor trang chủ</h6>
    <h6>3: banner left</h6>
    <h6>4: baner right</h6>

    <p>
        @Html.ActionLink("Thêm biển quảng cáo mới", "CreateQuangCao")
    </p>
    <table class="table">
        <tr>
            <th>
                Địa chỉ hình
            </th>
            <th>
                Vị trí đặt
            </th>
            <th>
                Ngày đăng
            </th>
            <th>
                Mô tả
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.UrlHinh" width="120"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ViTri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayDangLen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    @Html.ActionLink("Chỉnh Sửa", "EditQuangCao", new { id = item.QuangCaoID }) |
                    @Html.ActionLink("Xóa", "DeleteQuangCao", new { id = item.QuangCaoID })
                </td>
            </tr>
        }

    </table>
</div>