
@{
    ViewBag.Title = "Chitiettin";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}
    <div class="col-lg-8 col-md-8 col-sm-8">
        <div class="left_content">
            <div class="single_page">
                
                <h1 style="color:red; font-weight:bold">@Model.TieuDe</h1>
                <h5 style="color:black">@Model.MoTa</h5>   
                <div class="post_commentbox"> 
                    <span><i class="fa fa-user" style="color:grey"> @Model.Admin.AdminID</i></span>                 
                    <span><i class="fa fa-calendar" style="color:grey">@ViewBag.NgayDang</i></span></div>
                              
                <div class="related_post">
                    <h2 style="color:red">Bài Viết Liên Quan<i class="fa fa-thumbs-o-up"></i></h2>
                    <ul class="spost_nav wow fadeInDown animated">
                        @{Html.RenderAction("TinLienQuan", "TinTuc");}
                    </ul>
                </div>
            </div>
        </div>
    </div>







