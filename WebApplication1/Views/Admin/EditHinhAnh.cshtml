@model WebApplication1.Models.HinhAnh

@{
    ViewBag.Title = "EditHinhAnh";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<h2>Chỉnh sửa hình ảnh</h2>

@using (Html.BeginForm("EditHinhAnh", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.HinhAnhID)

        <div class="form-group">
            @Html.Label("Hình", new { @class = "col-md-2" })
            <div class="col-md-10">
                <input type="file" name="fileupload">
                <img src="@Url.Content("~/HinhAnh/" + Model.UrlHinh)" width="120" style="padding-top:10px"/>(Ảnh hiện tại)
                @ViewBag.Message
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Ngày Đăng", new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayDangHinh)
                @ViewData["Loi1"]
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Tựa Đề", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TuaDe)
                @ViewData["Loi2"]
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở Về", "HinhAnh")
</div>
