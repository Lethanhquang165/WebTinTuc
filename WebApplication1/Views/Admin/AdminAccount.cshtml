@model WebApplication1.Models.Admin

@{
    ViewBag.Title = "AdminAccount";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<h2>Thông Tin Tài Khoản</h2>

<div class="row">
    <div class="col-md-2">
        <h4>@Session["Username"]</h4>
        <img class="img-center" src="~/AvatarAdmin/@Model.Avatar" style="width:100px; height:100px">
    </div>
    <div class="col-md-4" style="margin-top:5%">
        <dl class="dl-horizontal">
            <dt>
                Họ Tên
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HoTen)
            </dd>

            <dt>
                Email
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                Giới Tính
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GioiTinh)
            </dd>

            <dt>
                Số Điện Thoại
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SDT)
            </dd>
        </dl>
    </div>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "EditAdmin", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Trở về", "Index")
</p>
